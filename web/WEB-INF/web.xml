<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>MainController</servlet-name>
        <servlet-class>controllers.MainController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadCarController</servlet-name>
        <servlet-class>controllers.LoadCarController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddCarController</servlet-name>
        <servlet-class>controllers.AddCarController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CarDetailController</servlet-name>
        <servlet-class>controllers.CarDetailController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateCarController</servlet-name>
        <servlet-class>controllers.UpdateCarController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainController</servlet-name>
        <url-pattern>/MainController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadCarController</servlet-name>
        <url-pattern>/LoadCarController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddCarController</servlet-name>
        <url-pattern>/AddCarController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CarDetailController</servlet-name>
        <url-pattern>/CarDetailController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateCarController</servlet-name>
        <url-pattern>/UpdateCarController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>
            MainController
        </welcome-file>
    </welcome-file-list>
</web-app>
